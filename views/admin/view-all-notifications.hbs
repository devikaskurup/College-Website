<link rel="stylesheet" href="/stylesheets/view-all-forms.css" />

<div class="main-container">
  <div class="title">
    <h1>Notifications</h1>
    <a href="/admin/add-new-notification" class="btn">Add New Notification</a>
  </div>
  <div class="sub-contents">
    <table id="formsTable">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Date</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each notificationList}}
          <tr>
            <td>{{title}}</td>
            <td>{{content}}</td>
            <td>{{dateUpdated}}</td>
            <td><a
                href="/admin/edit-notification/{{_id}}"
                class="edit-btn"
              >Edit</a>&nbsp;<a
                href="/admin/delete-notification/{{_id}}"
                class="delete-btn"
                onclick="return confirm('Are you sure you want to delete this Notification?');"
              >Delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<script>
  $( function () { $('#formsTable').DataTable(); } );
</script>