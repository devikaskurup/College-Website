<link rel="stylesheet" href="/stylesheets/add-new-form.css" />
<div class="question-content">
  <div class="title">
    <h1>Edit Image from gallery</h1>
  </div>
  <div class="form-container">
    <form
      action="/admin/edit-gallery-photo"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="input-group">
        <label for="title">Title</label>
        <input
          type="text"
          name="title"
          id="title"
          required
          value="{{photoObj.title}}"
        />
      </div>
      <input type="hidden" name="_id" value="{{photoObj._id}}" />
      <div class="input-group">
        <label for="image">Image</label>
        <input
          type="file"
          accept="image/*"
          name="image"
          id="image"
          onchange="changeImg()"
        />
      </div>
      <img src="/img/gallery/{{photoObj._id}}.jpg" id="img" width="100" height="120" />
      <div class="btn-group" style="margin-top: 10px;">
        <input type="submit" class="btn-submit" value="Submit" />
        <a class="btn-reset" href="/admin/photo-gallery">Go back</a>
      </div>
    </form>
  </div>
</div>
<script>
  function changeImg() {
     document.getElementById('img').hidden = "true";
     window.alert(" Image Updated"); 
  }
</script>