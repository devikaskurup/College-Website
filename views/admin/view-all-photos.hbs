<link rel="stylesheet" href="/stylesheets/view-all-forms.css" />

<div class="main-container">
  <div class="title">
    <h1>Photo Gallery</h1>
    <a href="/admin/add-to-gallery" class="btn">Add New photo</a>
  </div>
  <div class="sub-contents">
    <table id="formsTable">
      <thead>
        <tr>
          <th>Title</th>
          <th>Image</th>
          <th>Date</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each photoList}}
          <tr>
            <td>{{title}}</td>
            <td><img
                src="/img/gallery/{{_id}}.jpg"
                width="30px"
                alt="image in the gallery"
              /></td>
            <td>{{dateAdded}}</td>
            <td><a
                href="/admin/edit-gallery-photo/{{_id}}"
                class="edit-btn"
              >Edit</a>&nbsp;<a
                href="/admin/delete-photo/{{_id}}"
                class="delete-btn"
                onclick="return confirm('Are you sure you want to delete this image?');"
              >Delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<script>
  $( function () { $('#formsTable').DataTable(); } );
</script>