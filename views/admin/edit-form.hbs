<link rel="stylesheet" href="/stylesheets/add-new-form.css" />
<div class="question-content">
  <div class="title">
    <h1>Edit Form</h1>
  </div>
  <div class="form-container">
    <form
      action="/admin/edit-form-page"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="input-group">
        <label for="title">Title</label>
        <input
          type="text"
          name="title"
          id="title"
          value="{{formObj.title}}"
          required
        />
      </div>

      <div class="input-group">
        <label for="newForm">Document</label>

        <input
          type="file"
          accept=".pdf,.doc,.docx"
          name="newForm"
          id="newForm"
          onchange="changeForm()"
        />
      </div>
        <iframe
        id="frame"
          src="/forms/{{formObj._id}}.pdf"
          sandbox="allow-pointer-lock"
          width="200"
          title="The form document in pdf format"
          allowfullscreen="true"
        ></iframe>
      <input type="hidden" name="_id" value="{{formObj._id}}" />
      <div class="btn-group" style="margin-top: 20px;">
        <input type="submit" class="btn-submit" value="Submit" />
        <a class="btn-reset" href="/admin/forms">Go back</a>
      </div>
    </form>
  </div>
</div>
<script>
  function changeForm() {
     document.getElementById('frame').hidden = "true";
     window.alert(" Form Updated"); 
  }
</script>