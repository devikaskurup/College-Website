<link rel="stylesheet" href="/stylesheets/add-new-form.css" />
<div class="question-content">
  <div class="title">
    <h1>Add Image to gallery</h1>
  </div>
  <div class="form-container">
    <form
      action="/admin/add-to-gallery"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="input-group">
        <label for="title">Title</label>
        <input
          type="text"
          name="title"
          id="title"
          required
          placeholder="Enter the title for the image"
        />
      </div>

      <div class="input-group">
        <label for="newForm">Image</label>
        <input type="file" accept="image/*" name="image" id="image" required />
      </div>
      <div class="btn-group">
        <input type="submit" class="btn-submit" value="Submit" />
        <input type="reset" class="btn-reset" value="Reset" />
      </div>
    </form>
  </div>
</div>